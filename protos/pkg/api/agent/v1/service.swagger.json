{
  "swagger": "2.0",
  "info": {
    "title": "Security Groups Agent API",
    "version": "1.0"
  },
  "tags": [
    {
      "name": "AgentService",
      "description": "Security Groups Agent API service"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/registration": {
      "post": {
        "description": "GetAgentRegistration: returns basic registration details from the agent",
        "operationId": "AgentService_GetAgentRegistration",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/agentRegInfo"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "Request object for fetching registration info with optional ownership verification",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/agentRegInfoReq"
            }
          }
        ],
        "tags": [
          "AgentService"
        ]
      }
    }
  },
  "definitions": {
    "agentOwnerCheck": {
      "type": "object",
      "properties": {
        "noAuth": {
          "type": "object",
          "properties": {}
        },
        "secret": {
          "$ref": "#/definitions/agentSecretData"
        }
      },
      "title": "Methods for ownership verification"
    },
    "agentRegInfo": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string",
          "example": "2438ac3c-37eb-4902-adef-ed16b4431030",
          "description": "host uuid (up to 255 characters)",
          "title": "uuid",
          "pattern": "^.{1,255}$"
        },
        "name": {
          "type": "string",
          "example": "my-server01.example.com",
          "description": "DNS-style host name",
          "title": "hostname",
          "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\\.[a-zA-Z0-9]([a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$"
        }
      },
      "description": "RegInfo - response with basic agent registration details",
      "title": "RegInfo"
    },
    "agentRegInfoReq": {
      "type": "object",
      "properties": {
        "condition": {
          "$ref": "#/definitions/agentOwnerCheck",
          "description": "Ownership verification method (empty or secret data)",
          "title": "condition"
        }
      },
      "description": "Request object for fetching registration info with optional ownership verification",
      "title": "RegistrationInfoRequest",
      "required": [
        "condition"
      ]
    },
    "agentSecretData": {
      "type": "object",
      "properties": {
        "rawValue": {
          "type": "string",
          "title": "Base64-encoded plain value"
        },
        "secureValue": {
          "type": "string",
          "title": "Base64-encoded encrypted value: BASE64(IV(16 bytes) + ciphertext)"
        }
      },
      "title": "Authentication data"
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
